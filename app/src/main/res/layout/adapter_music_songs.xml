<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/song_adapter_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/song_adapter_image"
        android:layout_width="@dimen/generic_list_image_size"
        android:layout_height="@dimen/generic_list_image_size"
        android:layout_marginEnd="@dimen/vertical_list_item_margin"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight=".8"
        android:clickable="false"
        android:focusable="false"
        android:orientation="vertical">

        <TextView
            android:id="@+id/song_adapter_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:ellipsize="end"
            android:fontFamily="@font/bold"
            android:maxLines="1"
            android:textColor="@color/textPrimary"
            android:textSize="6pt" />

        <TextView
            android:id="@+id/song_adapter_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:ellipsize="end"
            android:fontFamily="@font/medium"
            android:maxLines="1"
            android:textColor="@color/textPrimary"
            android:textSize="4pt" />

        <TextView
            android:id="@+id/song_adapter_extension"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/medium"
            android:maxLines="1"
            android:textColor="@color/textPrimary"
            android:textSize="4pt" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/song_adapter_menu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/ripple"
        android:src="@drawable/ic_more_vert" />

</LinearLayout>

